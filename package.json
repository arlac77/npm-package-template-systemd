{
  "pacman": {
    "depends": {
      "systemd": ">=244.1"
    }
  },
  "template": {
    "files": [
      {
        "merger": "INI",
        "pattern": "**/*.service",
        "options": {
          "messagePrefix": "fix(systemd): ",
          "expand": false
        }
      },
      {
        "merger": "INI",
        "pattern": "**/*.socket",
        "options": {
          "messagePrefix": "fix(systemd): ",
          "expand": false
        }
      },
      {
        "merger": "INI",
        "pattern": "**/*.mount",
        "options": {
          "messagePrefix": "fix(systemd): ",
          "expand": false
        }
      }
    ]
  }
}
